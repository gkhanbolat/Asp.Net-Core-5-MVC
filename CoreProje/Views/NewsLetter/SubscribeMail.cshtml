
<div class="tech-btm">
    <h4>Sign up to our newsletter</h4>
    <form method="post">
        <input type="email" placeholder="Email" required="" name="Mail" id="txtmail">
        <input type="submit" id="btn" value="Subscribe">
    </form>

</div>


<script type="text/javascript">

    $("#btn").click(function () {
        let values = {
            Mail: $("#txtmail").val()
        };

        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail/",
            data: values,
            success: function (funk) {
                let result = jQuery.parseJSON(funk);
            }
        });
    });

</script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>