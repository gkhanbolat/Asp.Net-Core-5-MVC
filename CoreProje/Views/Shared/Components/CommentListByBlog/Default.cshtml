@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    <h4>Comments</h4>
    @if(Model.Count() == 0) { 
        <h1>Daha önce yorum yapılmamış.</h1>
        <h1> İlk yorumu sen yap.</h1>
    }
    @foreach (var item in Model)
    {
        <div class="media">

            <img src="~/Blog/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                </p>

               
            </div>

        </div>}

    </div>